<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Use title if it's in the page YAML frontmatter -->
    <title>Hollywood Undead Tour Sweeps</title>
    <!-- Stylesheets -->
    <%= stylesheet_link_tag "all" %>
  </head>

  <body class="<%= page_classes %>">
    <%= yield %>

    <!-- Javascripts -->
    <%= javascript_include_tag  "all" %>
    <script>
      // init contest //
      $("#contest-widget").shareContestFB({
        context: {
          fbAppId: "1645838892305711",
          fbShareTitle: "Welcome To The Fearless Summer",
          fbShareLink: "http://fngt.it/Fearlesssummer15/f",
          fbImageUrl: "https://s3.amazonaws.com/myfangate.com/fearlesssummer16/phase2/share.jpg",
          fbSubText: "http://fngt.it/Fearlessatapmas/f",
          fbDialog: "Enter to win weekly prizes!",
          formActionUrlId: "1eXasBxlCpeSbn6d2__QQzNit1u8ElzCixJxtixI5-M8",
          firstNameId: "749925490",
          lastNameId: "453795809",
          emailId: "1493557255",
          optInId: "583147646",
          rulesId: "1082888376",
          fbCheckId: "701792494",
          twitterCheckId: "1730686214",
          contactName: "Fearless Records",
          rulesLink: "http://google.com",
          thankYouMsg: "Thanks for entering!",
        }
      });
      // TOUR DATES
      $("#entry_1392261638").hide();
      var formfield = $('#entry_1493557255').parent();
      formfield.parent().parent().append('<select multiple id=\"e1\" style=\"width:100%\"></select>');
      $('.date').each(function(){ 
        var text = $(this).text(); 
        $('#e1').append('<option value=\"'+text+'\">'+text+'</option>')
      });      
      $("#e1").select2({
          maximumSelectionLength: 1,
          placeholder: "Select a Tour Date"
      });  
    </script>
    <script type="text/javascript">

    </script>
  </body>
</html>
